# FUNCTION YOU NEED FOR THIS TO WORK ####
class_map_to_dim <- function(entry) {
  tibble::tibble(
    demo_group = entry$label,
    demo_group_num = entry$num,
    demo_group_group_num = entry$group_num,
    demo_group_group = entry$group
  )
}

